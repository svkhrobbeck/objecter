{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "module": "esnext",
    "outDir": "dist",
    "declaration": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "jsx": "preserve"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
